<% if comment.favorited_by?(current_customer) %>
	<td>
		<%=link_to "いいね", comment_likes_path(comment.id), method: :delete, remote: true  %>
		<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= comment.likes.count %>
<% else %>
		<%=link_to "いいね" ,comment_likes_path(comment.id), method: :post, remote: true  %>
		<i class="fa fa-heart-o" aria-hidden="true"></i>
		<%= comment.likes.count %>
	</td>
	
<% end %>

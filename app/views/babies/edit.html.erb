<div class="container">
	<div class="row">
        <div class="col-xs-3">
			<h2>赤ちゃんの編集</h2>
				<%= form_for(@baby) do |f| %>
				  <% if @baby.errors.any? %>
			          <% @baby.errors.full_messages.each do |message| %>
			            <li><%= message %></li>
			          <% end %>
			      <% end %>
					<label>お名前</label>
					<%= f.text_field :baby_name %><br>
					<%= f.label :お誕生日 %>
					<%= raw sprintf(
						f.date_select(
						:birth,
						use_month_numbers: true,
						start_year: 2020,
						end_year: (Time.now.year - 18),
						default: Date.new(2020, 1, 1),
						date_separator: '%s'),
					'年' , '月') + '日'%>
					<label>性別</label>
					<label><%= f.radio_button :sex, "man" %> 男の子 </label>
					<label><%= f.radio_button :sex, "woman" %> 女の子</label><br>
					<%= f.submit '保存する' ,class: "btn btn-primary" %>
				<% end %>
			<%= link_to '赤ちゃん選択画面', babies_path %>
		</div>
	</div>
</div>
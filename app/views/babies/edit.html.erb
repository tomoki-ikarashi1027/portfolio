<h2>赤ちゃんの追加・編集</h2>
<%= form_for(@baby) do |f| %>
<label>お名前</label>
	<%= f.text_field :baby_name %><br>
	<%= f.label :お誕生日 %>
	<%= raw sprintf(
			f.date_select(
			:birth,
			use_month_numbers: true,
			start_year: 2020,
			end_year: (Time.now.year - 18),
			default: Date.new(2020, 1, 1),
			date_separator: '%s'),
			'年' , '月') + '日'%>
	<label>性別</label><br>
	<label><%= f.radio_button :sex, "man" %> 男の子 </label>
	<label><%= f.radio_button :sex, "woman" %> 女の子</label>
	<%= f.submit '保存する' %>
<% end %>
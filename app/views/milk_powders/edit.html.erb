<div class="container">
	<div class="row">
	   <h2>ミルク・編集</h2>
		 <%= form_for [@baby, @milk_powder] , url:baby_milk_powders_path(id:@milk_powder.baby_id) do |f| %>
		    <% if @milk_powder.errors.any? %>
	      		<% @milk_powder.errors.full_messages.each do |message| %>
	            	<li><%= message %></li>
      			<% end %>
   		    <% end %>
	   		<div class="milk-powder-select">
	        	<%= f.select :body, grouped_options_for_select(MilkPowder::SELECT_OPTIONS), {include_blank: '授乳量を選択'} %>
	        	<span class="aa">cc</span><br>
	        </div>
	        <%= f.submit '保存する',class: "btn btn-primary"  %>
		<% end %>
	</div>
</div>
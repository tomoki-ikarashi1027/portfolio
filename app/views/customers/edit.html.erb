<div class="container">
	<div class="modal1">
		<h2 class="user_info">User Edit</h2>
		<%= form_for (@customer) do |f| %>
		<%= attachment_image_tag @customer,:image, size: "200x200",format: 'jpeg',fallback: "no_image.jpg" ,class: "self_image" %><br>
		<label>
			<div class="btn btn-default">画像変更</div>
		<%= f.attachment_field :image, class: "input-image" %>
		</label><br>
		<label class="my-name">ユーザー名:</label>
		<%= f.text_field :name ,class: "my-name-field" %><br>
		<%= f.submit '変更を保存' ,class: "btn-primary mybtn" %>
		<% end %>
	</div>
</div>
<div class="container">
	<div class="user_edit">
		<div class="info-head">
			<h2>User Edit</h2>
		</div>
		<%= form_for (@customer) do |f| %>
		<%= attachment_image_tag @customer,:image, size: "200x200",format: 'jpeg',fallback: "no_image.jpg" ,class: "self_image" %><br>
		
			<%= f.attachment_field :image, class: "customer_image_field" %>
		
		<%= f.text_field :name ,class: "my-name-field" %><br>
		<%= f.submit 'Create' ,class: "textfield-btn" %>
		<% end %>
	</div>
</div>
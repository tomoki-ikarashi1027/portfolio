<div class="container problem-image">
	<div class="row">
        <div class="col-xs-10">
        	<div class="search">
				<%= form_tag problems_path, :method => 'get' do %>

				  <p>
				    <%= text_field_tag :search, params[:search] ,placeholder: "キーワード検索" %>
				    <%= submit_tag "検索", :body => nil %>
				  </p>
				<% end %>
				<%= form_tag(problems_path, method: "get") do %>
			 <%= select_tag "problem_name", options_for_select([["夜泣き", "夜泣き"],["睡眠","睡眠"],["沐浴","沐浴"],["授乳","授乳"]]),include_blank: true  %>
			 <%= submit_tag "検索" %>
			<% end %>

			</div>

			<% if flash[:notice] %>
			    <div class="flash">
			    <%= flash[:notice] %>
			    </div>
			<% end %>
			<%= link_to "投稿する",new_problem_path  %>
			<td> <%= link_to "赤ちゃん選択画面" , babies_path %></td>
			<table class="table">
				<thead>
					<th>みんなのお悩み</th>
				</thead>
				<tbody>
				 <% @problems.each do |problem| %>
					<tr>
						<td style="color:maroon;"><%= problem.category.problem_name  %></td>
							<td><%=  problem.customer.name %><br>
							<%= link_to problem.body,problem_path(problem) %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
			<%= paginate @problems, class: "paginate" %>
		</div>
	</div>
</div>

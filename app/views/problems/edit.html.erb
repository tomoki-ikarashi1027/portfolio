<div class="container">
	<div class="row">
        <div class="col-xs-3">
			<h2>お悩み編集</h2>
			<%= form_for(@problem) do |f| %>
				<h4>タイトル</h4>
				<%= f.text_field :title %>
				<h4>内容</h4>
				<%= f.text_area :body %>
				<%= f.submit 'Create' %>
			<% end %>
			<td><%= link_to 'Show',problem_path(@problem) %></td>
			<td><%= link_to 'Back',problems_path(@problems) %></td>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
        <div class="col-xs-5">
			<h2>お悩み詳細</h2>
			<table class="table sss">
				<tr>
					<td>カテゴリー: <%= @problem.category.problem_name %></td>
				</tr>
				<tr>
					<td>内容: <%= @problem.body %></td>
					<% if @problem.customer_id == current_customer.id %>
						<td><%= link_to "削除",  problem_path(@problem), method: :delete %></td>
					<% end %>
				</tr>
				<tr>
					<td>コメント数: <%= @problem.comments.count %></td>
				</tr>
				<td><%= link_to "戻る",problems_path(@problem) %></td>
			</table>
				<%= form_for (@comment) ,url: comments_path  do |f| %>
					<% if @comment.errors.any? %>
						<% @comment.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				<% end %>
				<h3>コメント</h3>
					<%= f.text_area :body %>
					<%= f.hidden_field :problem_id, :value => @problem.id %><br>
					<%= f.submit "投稿する"  %>
				<% end %>
			</div>
			<div class="col-xs-7">
				<table class="table sss">
					<% @comments.each do |comment| %>
						<tr>
							<td style="color:black;"><%= comment.body %></td>
					        <td id="likes_buttons_<%= comment.id %>">
								<%= render partial: 'likes/like', locals: { comment: comment} , class: 'like' %>
							</td>
						<% if comment.customer_id == current_customer.id %>
							<td><%= link_to "コメント削除",  comment_path(comment), method: :delete %></td>
						<% end %>
						<% if comment.score >= 1.5  %>
							<i class="fas fa-praying-hands"></i>
							<td class="score_comment1">VeryGood</td>
						<% elsif comment.score <= 1.4 && comment.score >= 0.7 %>
							<td><i class="far fa-thumbs-up"></i></td>
							<td class="score_comment2">good</td>
						<% else  %>
							<td><i class="far fa-thumbs-down"></i></td>
								<td class="score_comment3">Bad</td>
						<% end %>
						</tr>
					<% end %>
					<%= paginate @comments, class: "paginate" %>
				</table>
		</div>
	</div>
</div>

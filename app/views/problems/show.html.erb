<div class="container">
	<div class="problem">
        <div class="problem-content">
			<h2>お悩み詳細</h2>
			<div class="problem-category">
				カテゴリ:<%= @problem.category.problem_name %>
				<% if @problem.customer_id == current_customer.id %>
					<%= link_to "削除する",  problem_path(@problem), method: :delete %>
				<% end %>
				<%= link_to "Back",problems_path(@problem) %>
			</div>
			<div class="problem-body2"><%= @problem.body %></div>

			<span>コメント数:</span> <%= @problem.comments.count %>件
			<%= form_for (@comment) ,url: comments_path  do |f| %>
				<% if @comment.errors.any? %>
					<% @comment.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				<% end %>
				<h3>コメント</h3>
					<%= f.text_area :body %>
					<%= f.hidden_field :problem_id, :value => @problem.id %><br>
					<%= f.submit "投稿する" ,class: "problem_btn" %>
			<% end %>
		</div>
		<div class="problem-comment">
			<table class="table">
				<% @comments.each do |comment| %>
					<tr>
						<td style="color:black;"><%= comment.body %></td>
						<td id="likes_buttons_<%= comment.id %>">
							<%= render partial: 'likes/like', locals: { comment: comment} , class: 'like' %>
						</td>
						<% if comment.customer_id == current_customer.id %>
								<td ><%= link_to "削除",  comment_path(comment), method: :delete %></td>
						<% end %>
					<!-- 	<% if comment&.score.to_i >= 1.5  %>
							<i class="fas fa-praying-hands"></i>
							<td class="score_comment1">VeryGood</td>
						<% elsif comment&.score.to_i <= 1.4 && comment&.score.to_i >= 0.7 %>
							<td><i class="far fa-thumbs-up"></i></td>
							<td class="score_comment2">good</td>
						<% else  %>
							<td><i class="far fa-thumbs-down"></i></td>
							<td class="score_comment3">Bad</td>
						<% end %> -->
					</tr>
				<% end %>
				<%= paginate @comments, class: "paginate" %>
			</table>
		</div>
	</div>
</div>
